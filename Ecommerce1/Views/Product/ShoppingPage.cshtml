@model IEnumerable<Ecommerce1.Models.Product>

<div class="container">
    <h2 class="text-primary">Product List</h2>

    @if (Model != null && Model.Any())

    {
        <div class="product-list">
            @foreach (var product in Model)

            {
                <div class="product-item border rounded p-3 mb-3">
                    <h3>@product.Name</h3>
                    <p>Price: @product.Price.ToString("C")</p>
                    <p>Description: @product.Description</p>
                    <p>SKU: @product.SKU</p>
                    <p>Category: @product.Category</p>
                    <p>Created: @product.Created</p>
                    <p>Last Modified: @product.Modified</p>

                    @if (product.Discount != null)

                    {
                        <p>Discount: @product.Discount.Name - @product.Discount.Percent %</p>
                    }

                    <a href="@Url.Action("Details", "Product", new { id = product.Id_product })" class="btn btn-info">View Details</a>
                </div>
            }
        </div>
    }

    else

    {
        <p>No products available.</p> <!-- Message when no products are found -->
    }
</div>
